{% extends "::base.html.twig" %}

{% block title %}Report management{% endblock %}

{% block body %}
    <h1>Report management <span class="float-right"><a class="btn btn-primary" href="{{ path( 'report_add' ) }}">New report</a></span></h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Technician</th>
                <th>Location</th>
                <th>Status</th>
                <th>Options</th>
            <tr>
        </thead>
        <tbody>
            {% if reports %}
                {% for report in reports %}
                    <tr>
                        <td>{{report.getId()}}</td>
                        <td>{{report.getDate()|date('H:i d-m-Y')}}</td>
                        {% if report.getTechnician() %}
                            <td>{{report.getTechnician().getName()}}</td>
                        {% else %}
                            <td>{{report.getTechnicianId()}} -</td>
                        {% endif %}
                        <td>{{report.getLocation().getName()}}</td>
                        <td>{{report.getHandled( true )}}</td>
                        <td><a href="{{ path( 'report_edit', {'report': report.id} ) }}" class="btn btn-primary">Edit</a></td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6">No reports found</td>
                </tr>			
            {% endif %}
        </tbody>
    </table>
{% endblock %}