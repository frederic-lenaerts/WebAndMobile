{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col">
        <h1>Backstage</h1>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="{{ path( 'home' ) }}">Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="{{ path( 'statuses' ) }}">Statuses</a>
            </li>
        </ul>

        {% if locations %}
        <div class="dropdown">
            <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownLocationSelection" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Locations
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownLocationSelection">
                {% for location in locations %}
                    <a class="dropdown-item" href="{{ path( 'statusesFiltered', {'location': location.id} ) }}">{{location.name}}</a>
                {% endfor %}
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path( 'home' ) }}">None</a>
            </div>
        </div>
        {% else %}
            <p>No locations found</p>
        {% endif %}
        
        <h2>Statuses</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Status</th>
                <tr>
            </thead>
            <tbody>
                {% if statuses %}
                    {% for status in statuses %}
                        <tr>
                            <td>{{status.getId()}}</td>
                            <td>{{status.getDate()|date('H:i d-m-Y')}}</td>
                            <td>{{status.getLocation().getName()}}</td>
                            <td>{{status.getStatus( true )}}</td>
                        </tr>			
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4">No statuses found</td>
                    </tr>			
                {% endif %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(statuses) }}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
