{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col">
        <h1>Backstage</h1>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="{{ path( 'home' ) }}">Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path( 'statuses' ) }}">Statuses</a>
            </li>
        </ul>

        {% if locations %}
        <div class="dropdown">
            <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownLocationSelection" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Locations
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownLocationSelection">
                {% for location in locations %}
                    <a class="dropdown-item" href="{{ path( 'reportsFiltered', {'location': location.id} ) }}">{{location.name}}</a>
                {% endfor %}
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path( 'home' ) }}">None</a>
            </div>
        </div>
        {% else %}
            <p>No locations found</p>
        {% endif %}
        
        <h2>Reports</h2>
        <table class="table table-responsive-md">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Technician</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Options</th>
                <tr>
            </thead>
            <tbody>
                {% if reports %}
                    {% for report in reports %}
                        <tr>
                            <td>{{report.getId()}}</td>
                            <td>{{report.getDate()|date('d-m-Y')}}</td>
                            {% if report.getTechnician() %}
                                <td>{{report.getTechnician().getName()}}</td>
                            {% else %}
                                <td>-</td>
                            {% endif %}
                            <td>{{report.getLocation().getName()}}</td>
                            <td>{{report.getHandled( true )}}</td>
                            {% if report.getHandled() %}
                                <td><a href="{{ path( 'handled', {'report': report.getid()} ) }}" class="btn btn-danger">Unhandled</a></td>
                            {% else %}
                                <td><a href="{{ path( 'handled', {'report': report.getid()} ) }}" class="btn btn-success">Handled</a></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">No reports found</td>
                    </tr>			
                {% endif %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(reports) }}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
